<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Opacity="0.5" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="{x:Null}" Foreground="{x:Null}" IsTabStop="False" Visibility="Visible" Cursor="SizeWE" ShowActivated="False" WindowStyle="None" ShowInTaskbar="False" AllowsTransparency="True" Topmost="True" KeyDown="Window_KeyDown" Closed="Window_Closed">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Image Source="Media/Images/holyterry.png" Width="400" HorizontalAlignment="Center" />
        </StackPanel>
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding CurrentTime,FallbackValue=Current}" Grid.Column="0" Foreground="Black" VerticalAlignment="Center" Margin="0,0,40,0" />
            <Button Content="Entertain God and your ass will follow" Click="Button_Click" Grid.Column="1" />
        </Grid>
    </DockPanel>
</Window>
